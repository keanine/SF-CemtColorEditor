<Window x:Class="SonicFrontiersCemtColorEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SonicFrontiersCemtColorEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="fileText" HorizontalAlignment="Left" Margin="10,57,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="489"/>
        <TextBox x:Name="colorText" HorizontalAlignment="Left" Margin="10,103,0,0" TextWrapping="Wrap" Text="FF000058" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="EditColor" Content="Edit" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" Width="120" Click="EditColor_Click"/>
        <TextBlock x:Name="outputText" HorizontalAlignment="Center" Margin="0,28,0,0" TextWrapping="Wrap" Text="Debug Output" VerticalAlignment="Top" Height="329" Width="324"/>
        <Label Content="RGBA" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top"/>
        <Label Content="Sonic.pac folder" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Load" Content="Load" HorizontalAlignment="Left" Margin="504,56,0,0" VerticalAlignment="Top" Width="69" Click="Load_Click"/>

    </Grid>
</Window>
